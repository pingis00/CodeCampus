@model ContactViewModel

<section class="contact">
    <div class="container">
        <div class="breadcrumb">
            <a href="@Model.HomeLink">
                <i class="fa-light fa-house"></i> Home
            </a>
            <span class="breadcrumb-separator">»</span>
            <span class="active">@Model.ContactText</span>
        </div>
        <h1>@Model.HeadTitle</h1>
        <div class="contact-us">
            @foreach (var option in Model.ContactOptions)
            {
                <div class="contact-option">
                    <div class="images">
                        <img src="@option.Icon.ImageUrl" alt="@option.Icon.AltText" />
                    </div>
                    <div class="contact-text">
                        <h4>@option.Title</h4>
                        <p>@option.Text</p>
                        <a href="@option.Url">@option.ActionName <i class="fa-regular fa-arrow-right"></i></a>
                    </div>
                </div>
            }
        </div>
        <div class="content">

            <form method="post" asp-controller="Contact" asp-action="SubmitContactForm">
                <h2>@Model.Title</h2>

                <div id="full-name" class="input-group">
                    <label asp-for="ContactForm.FullName"></label>
                    <span asp-validation-for="ContactForm.FullName"></span>
                    <input asp-for="ContactForm.FullName" />
                </div>
                <div id="email" class="input-group">
                    <label asp-for="ContactForm.Email"></label>
                    <span asp-validation-for="ContactForm.Email"></span>
                    <input asp-for="ContactForm.Email" />
                </div>
                <div id="service" class="input-group">
                    <label asp-for="ContactForm.Service">Service <span>(optional)</span></label>
                    <select asp-for="ContactForm.Service" asp-items="Model.AvailableServices" class="service">
                        <option value="" class="text">Choose the service you are interested in</option>
                    </select>
                </div>
                <div id="message" class="input-group">
                    <label asp-for="ContactForm.Message"></label>
                    <span asp-validation-for="ContactForm.Message"></span>
                    <textarea asp-for="ContactForm.Message"></textarea>
                </div>
                <a class="btn-theme-s" asp-controller="@Model.Link.ControllerName" asp-action="@Model.Link.ActionName">@Model.Link.Text</a>
            </form>

        </div>
    </div>
    <div id="map" style="height: 400px; width: 100%;"></div>

</section>