@model CodeCampus.Web.ViewModels.Account.SavedCoursesViewModel
<div class="saved-course-section">
    <div class="container">
        <section id="account">
            @await Html.PartialAsync("_SidebarPartial")

            <div class="saved-item-card">
                <div class="saved-item-header">
                    <h2>Saved Items</h2>
                    <form asp-action="DeleteAllCourses" asp-controller="Account" method="post" onsubmit="return confirm('Are you sure you want to delete all courses?');">
                        <button type="submit" class="btn-transparent btn">
                            <img src="~/Assets/Icons/ui/delete-icon.svg" alt="Account Icon" class="icon" /> Delete all
                        </button>
                    </form>
                </div>
                <div class="saved-course-page">
                    @await Html.PartialAsync("_CoursesPartial", Model.Courses)
                </div>
            </div>
        </section>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ToastMessages")
}